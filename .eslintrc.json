{
    "extends": ["airbnb", "prettier", "plugin:node/recommended"],
    "plugins": ["prettier"],
    "rules": {
      "prettier/prettier": ["error", {
        "endOfLine": "auto"}
      ],
      "no-unused-vars": "warn",
      "no-console": "off",
      "func-names": "off",
      "no-process-exit": "off",
      "object-shorthand": "off",
      "class-methods-use-this": "off",
      "node/no-unpublished-require": ["error", {
        "allowModules": [],
        "convertPath": null,
        "tryExtensions": [".js", ".json", ".node"]
      }]
    }
}